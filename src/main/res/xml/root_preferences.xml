            android:entryValues="@array/gojuon_rows"
            android:key="hiragana_gojuon_list"
            android:title="@string/gojuon_rows" />
        <MultiSelectListPreference
            android:defaultValue="@array/dakuon_rows"
            android:entries="@array/dakuon_rows"
